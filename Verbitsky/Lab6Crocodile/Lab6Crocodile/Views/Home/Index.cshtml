@model SelectList
@{
    ViewData["Title"] = "Crocodile";

}

<div>
    <canvas id="myCanvas" width="600" height="350"
            style="background-color:#eee; border: 1px solid #ccc; margin-top: 10px; margin-bottom: 10px; display: none">
        Ваш браузер не поддерживает Canvas
    </canvas>

    <div id="entrance" style="margin-top: 10px;">
        <label for="name">Enter your name:</label>
        <input type="text" id="name" />

        <div class="col-md-10">
            @Html.DropDownList("Groups", Model, htmlAttributes: new { @class = "dropDownList" })
        </div>

        <button onclick="Register()">Continue</button>
    </div>

    <div id="chat" style="display: none">
        <h3 id="spn-name"></h3>
        <form id="frm-send-message" action="#">
            <label for="message">Message:</label>
            <input type="text" id="message" />
            <input type="submit" id="send" value="Send" class="send" />
        </form>
        <ul id="messages"></ul>
    </div>

    <script src="~/js/signalr.min.js"></script>
    <script src="~/js/Register.js"></script>
    <script src="~/js/Connection.js"></script>
</div>
@using Lab2.Business.Abstraction.Entity
@model Post


@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "Post", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Post</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div>@Html.HiddenFor(x => x.Id)</div>
        <div>@Html.HiddenFor(x => x.Author.Id)</div>
        <div class="form-group">
            @Html.LabelFor(x => x.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(x => x.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Posts", "Posts", new { studentId = Model.Author.Id })
</div>
